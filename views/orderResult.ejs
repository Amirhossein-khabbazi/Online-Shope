    <div id="page">
        <!-- Header Section Start -->
        <%- include('./header' , {req , Sbrand : '' , category : '' , card}) %>

            <!-- Header Section End -->

            <!-- Page Title Section Start -->
            <div class="page-title-section section">
                <div class="page-title">
                    <div class="container">
                        <% if(status) { %>
                            <h1 class="title">سفارش شما با موفقیت ثبت شد</h1>
                            <% } else { %>
                                <h1 class="title">سفارش شما موفقیت آمیز نبود!!!</h1>
                                <% } %>
                    </div>
                </div>
                <div class="page-breadcrumb">
                    <div class="container">
                        <ul class="breadcrumb">
                            <li><a href="/">صفحه اصلی</a></li>
                            <li class="current">نتیجه سفارش</li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- Page Title Section End -->

            <!-- Shop Product Section Start -->
            <div class="section section-padding-bottom">
                <div class="container">
                    <div class="cart-empty-content">
                        <div class="cart-section section section-padding-bottom">
                            <div class="container faq-wrapper">
                                <div class="row">

                                    <div class="col-12">
                                        <!-- Cart Table -->
                                        <div class="cart-table table-responsive max-mb-30">
                                            <h5>کاربر گرامی لطفا کد (های) پیگیری سفارشات خود را به خاطر داشته باشید تا
                                                در صورت مشکل به راحتی از طریق پشتیبانی حل کنید. </h5>
                                            <table class="table">
                                                <thead>
                                                    <tr>
                                                        <th class="pro-title">محصول</th>
                                                        <th class="pro-price">قیمت</th>
                                                        <th class="pro-quantity">تعداد سفارش</th>
                                                        <th class="pro-quantity">کد پیگیری سفارش</th>
                                                        <th class="pro-remove">نتیجه </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% history.forEach(order=> { %>
                                                        <tr>

                                                            <td class="pro-title"><a href="#"
                                                                    id="title-<%- order.product.id %>">
                                                                    <%-order.title %>
                                                                </a></td>
                                                            <td class="pro-price"><span
                                                                    id="price-<%- order.product.id %>">
                                                                    <%- order.price %>
                                                                </span></td>
                                                            <td class="pro-price"><span
                                                                    id="price-<%- order.product.id %>">
                                                                    <%- order.count %>
                                                                </span></td>
                                                            <td class="pro-subtotal"><span
                                                                    id="follow-<%- order.product.id %>">
                                                                    <%- order.code %>
                                                                </span></td>
                                                            <% if(status) { %>
                                                                <td class="pro-remove"><a style="color:green"
                                                                        href="#">موفقیت آمیز</a></td>
                                                                <% } else { %>
                                                                    <td class="pro-remove"><a style="color:red"
                                                                            href="#">نا موفق</a></td>
                                                                    <% } %>


                                                        </tr>
                                                        <% }) %>
                                                </tbody>
                                            </table>
                                        </div>

                                        <div class="row max-mb-n30">

                                            <div class="col-lg-6 col-12 max-mb-30">
                                                <!-- محاسبه حمل و نقل -->

                                                <!-- Discount Coupon -->
                                                <!-- <div class="discount-coupon">
                                                <h4>کد کوپن تخفیف</h4>
