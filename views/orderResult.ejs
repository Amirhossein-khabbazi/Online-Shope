                                            <!-- Cart Summary -->
                                            <div class="col-lg-6 col-12 max-mb-30 d-flex">
                                                <div class="cart-summary">
                                                    <div class="cart-summary-wrap">
                                                        <h4>خلاصه سفارش</h4>
                                                        <p>جمع کل <span>
                                                                <%- cardPrice %> تومان
                                                            </span></p>
                                                        <p>با احتساب مالیات 9.3%</p>
                                                        <p>هزینه حمل و نقل <span>رایگان</span></p>
                                                        <h2>گراند توتال <span>
                                                                <%- cardPrice %>
                                                            </span></h2>
                                                    </div>

                                                </div>
                                            </div>

                                        </div>

                                    </div>

                                </div>
                            </div>
                        </div>
                        <a href="/buyer" class="btn btn-primary btn-hover-secondary">برگشت به پنل کاربری</a>
                    </div>
