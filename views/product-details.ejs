        <!-- Single Products Information Section Start -->
        <div class="single-product-information section section-padding-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <ul class="nav product-info-tab-list justify-content-center">
                            <li><a class="active" data-toggle="tab" href="#tab-description">اطلاعات فروشنده</a></li>
                            <li><a data-toggle="tab" href="#tab-reviews">نظرات (<%- comment.length %>)</a></li>
                        </ul>
                        <div class="tab-content product-infor-tab-content">
                            <div class="tab-pane fade show active" id="tab-description">
                                <div class="row">
                                    <div class="offset-lg-2 col-lg-8">
                                        <div class="description-list">
                                            <ul>

                                                <li><%- pro.seller.fullName %>
                                                </li>
                                                <li><%- pro.seller.brand %>
                                                </li>
                                                <li><%- pro.seller.phone %>
                                                </li>
                                                <li><%- pro.seller.address %>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="tab-reviews">

                                <div class="row">

                                    <div class="col-lg-8 offset-lg-2">
                                        <div class="comment-form-wrap review-form-wrap">
                                            <div class="comment-respond">
                                                <h3 class="title">افزودن نظر</h3>
                                                <p class="comment-notes max-mb-20"><span id="email-notes">آدرس ایمیل شما
                                                        منتشر نخواهد شد.</span> قسمتهای مورد نیاز علامت گذاری شده اند
                                                    <span class="required">*</span>
                                                </p>


                                                <div class="comment-form-rating max-mb-30">
                                                    <!-- <label>امتیاز شما:</label> -->
                                                    <!-- <span class="rating"><span class="star"></span></span> -->
                                                </div>

                                                <form action="#" method="post">
                                                    <div class="row">
                                                        <div class="col-md-6 col-12 max-mb-30">
                                                            <input type="text" id="nameComment"
                                                                value="<%- userInfo.fullName %>" placeholder="نام شما *"
                                                                name="Cname">
                                                            <p id="nameCommentError" style="color: red; display: none;">
                                                                نام نمیتواند خالی باماند</p>

                                                        </div>
                                                        <div class="col-md-6 col-12 max-mb-30">
                                                            <input type="number" id="phoneComment"
                                                                placeholder="شماره موبایل *"
                                                                value="<%- userInfo.phone %>" name="Cphone">
                                                            <p id="phoneCommentError"
                                                                style="color: red; display: none;"> لطفا شماره موبایل
                                                                خود را درست وارد کنید</p>

                                                        </div>
                                                        <div class="col-12 max-mb-30">
                                                            <textarea name="Cbody" id="bodyComment"
                                                                placeholder="نظر شما"></textarea>
                                                            <p id="bodyCommentError" style="color: red; display: none;">
                                                                نظر شما باید بیش از2 کاراکتر باشد</p>

                                                        </div>
                                                        <input type="hidden" id="product" value="<%- pro.id %>">

                                                        <div class="col-12">
                                                            <p
                                                                class="comment-form-cookies-consent justify-content-start text-left">
                                                                <!-- <input id="comment-cookies-consent" name="comment-cookies-consent" type="checkbox" value="yes"> -->
                                                                <!-- <label for="comment-cookies-consent">نام ، ایمیل و وب سایت من را برای دفعه بعدی که نظر می دهم در این مرورگر ذخیره کنید.</label> -->
                                                            </p>
                                                        </div>
                                                        <div class="col-12 text-center">
                                                            <button type="button" id="commentSubmitButton"
                                                                class="btn btn-primary btn-hover-secondary btn-width-180 btn-height-60">ارسال
                                                            </button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                        <div class="comment-list-wrapper review-list-wrapper">

                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <ol class="comment-list">
                                                        <% comment.forEach(com=>{ %>
                                                            <% if(com.father) { %>
                                                                <li class="comment border-bottom">
                                                                    <div class="comment-2">
                                                                        <div class="comment-author vcard">
                                                                            <img style="width:80px; height: 80px" alt=""
                                                                                src="/assets/images/user.png">
                                                                        </div>
                                                                        <div class="comment-content">
                                                                            <div class="meta">
                                                                                <h6 class="fn">
                                                                                    <%- com.fullName %>
                                                                                </h6>
                                                                                <span class="star-rating">
                                                                                    <!-- <span class="rating-active">امتیاز</span> -->
                                                                                </span>
                                                                            </div>
                                                                            <div class="comment-text">
                                                                                <p>
                                                                                    <%- com.body %>
                                                                                </p>
                                                                                <!-- <p>از اینکه همیشه الگوی HTML خود را به روز نگه دارید متشکریم. سطح حمایت و فداکاری شما هیچکدام از آنها نیست.</p> -->
                                                                            </div>

                                                                            <div class="comment-actions">
                                                                                <div class="comment-datetime">
                                                                                    <%- date(com.createdAt).format('jYYYY/jMM/jDD   |  HH:mm:ss') %>
                                                                                </div><span> </span>
                                                                                <!-- <a class="comment-reply-link" href="#">پاسخ</a> -->
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <% if(com.child) { %>
                                                                        <div
                                                                            style="margin-right: 15%; margin-bottom: 50px; margin-top: 20px;">
                                                                            <div class="comment-2">
                                                                                <div class="comment-author vcard">
                                                                                    <img style="width:80px; height: 80px" alt=""
                                                                                        src="<%- pro.seller.logo %>">
                                                                                </div>
                                                                                <div class="comment-content">
                                                                                    <div class="meta">
                                                                                        <h6 class="fn">
                                                                                            <%- com.child.fullName %>
                                                                                        </h6>
                                                                                        <span class="star-rating">
                                                                                            <!-- <span class="rating-active">امتیاز</span> -->
                                                                                        </span>
                                                                                    </div>
                                                                                    <div class="comment-text">
                                                                                        <p>
                                                                                            <%- com.child.body %>
                                                                                        </p>
                                                                                        <!-- <p>از اینکه همیشه الگوی HTML خود را به روز نگه دارید متشکریم. سطح حمایت و فداکاری شما هیچکدام از آنها نیست.</p> -->
                                                                                    </div>

                                                                                    <div class="comment-actions">
                                                                                        <div class="comment-datetime">
                                                                                            <%- date(com.child.createdAt).format('jYYYY/jMM/jDD   |  HH:mm:ss') %> 
                                                                                        </div><span> </span>
                                                                                        <!-- <a class="comment-reply-link" href="#">پاسخ</a> -->
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                </li>
                                                                <% } %>
                                                                    <% } %>
                                                                        <% }) %>


                                                    </ol>
                                                </div>
                                            </div>
                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Single Products Information Section End -->

        <%- include('./footer' ) %>


        <!-- Scroll Top Start -->
        <a href="#" class="scroll-top" id="scroll-top">
            <i class="arrow-top fal fa-long-arrow-up"></i>
            <i class="arrow-bottom fal fa-long-arrow-up"></i>
        </a>
        <!-- Scroll Top End -->
    </div>

