    <script>
        let like = 0
        let likenum;
        $("#likeimg").click(async function () {
            if (like == 0) {
                    
                like = 1
                $("#likeimg").css("border-color", "#20ad96");
                $("#likeimg").css("background-color", "#20ad96");
                $("#likeimg").css("color", "#fff");
                let likenum = <%- pro.like %>
                    $('#likeNum').text(likenum + 1)
                let response = await fetch('/product_details/like/<%- pro.slug %>', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ product_slug: '<%- pro.slug %>' }),
                })
            }
            if (like == 1) {
                like = 0
                $("#likeimg").css("border-color", "#fff");
                $("#likeimg").css("background", "#f8f8f8");
                $("#likeimg").css("color", "#333");
                let likenum = <%- pro.like %>
                    $('#likeNum').text(likenum)
                let response = await fetch('/product_details/disLike/<%- pro.slug %>', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ product_slug: '<%- pro.slug %>' }),
                })
            }


        })
        

    </script>


