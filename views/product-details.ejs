        <!-- Page Title Section End -->

        <!-- Product Details Section Start -->
        <div class="section section-padding-bottom-80">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="single-product-image">
                            <img src="<%- pro.IMG1080 %>" alt="book">
                            <!-- <div class="product-badges">
                                <span class="onsale">-29%</span>
                            </div> -->
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="single-product-content">
                            <h3 class="title">
                                <%- pro.title %>
                            </h3>
                            <h6>
                                <%- pro.seller.brand %>
                            </h6>
                            <span class="prices">
                                <span class="price-new">
                                    <%- price(pro.price) %> تومان
                                </span>
                                <!-- <span class="price-old">69000 تومان</span> -->
                            </span>
                            <div class="product-ratings">
                                <span class="star-rating">
                                    <span class="rating-active">امتیاز</span>
                                </span>
                                <a href="#reviews" class="review-link">(<span class="count">
                                        <%- comment.length %>
                                    </span> نظرات مشتری)</a>
                            </div>
                            <div class="product-description">
                                <p>
                                    <%- pro.body %>
                                </p>
                                <!-- <p>استراتژی های روشن و مختصر بهینه سازی موتور جستجو (SEO) را برای افزایش رتبه جستجوی وب سایت خود در Google ، Bing و Yahoo در سال 2020 ، بدون در نظر گرفتن تجربه قبلی خود ، بیاموزید. آیا تا به حال به این موضوع فکر کرده اید که چرا تجارت آنلاین شما در رتبه اول Google یا حتی در صفحه اول نتایج قرار ندارد؟ اکنون زمان آن است که دریابید چرا SEO یکی از بزرگترین متحدان شما در ایجاد ترافیک و تبدیل اضافی در سال 2020 است.</p> -->
                            </div>
                            <div class="quantity-button-wrapper">
                                <div class="quantity">
                                    <label>تعداد </label>
                                    <input id="number" type="number" value="1" min="1">
                                    <input type="hidden" id="exsist" value="<%- pro.exsist %>">
                                    <p id="numberError" style="color: red; display: none;">تعداد سفارش بیشتر از
                                        تعداد موجود در انبار میباشد</p>
                                    <p id="numberErrorZero" style="color: red; display: none;">تعداد سفارش
                                        نمیتواند صفر و کمتر باشد!</p>
                                    <input type="hidden" id="exsist" value="<%- pro.exsist %>">
                                    <br /><br />
                                </div>
                                <p class="stock in-stock">
                                    <%- pro.exsist %> در انبار
                                </p>
                            </div>
                            <div class="product-action">
                                <% if(pro.exsist !=0) { %>
                                    <% if(is_auth=='true' ) { %>

                                        <% if(isInCard) { %>

                                            <button class=" btn btn-primary btn-hover-secondary"
                                                data-dismiss="modal">این محصول در سبد خرید شما موجود میباشد</button>

                                            <% } else { %>

                                                <button onclick="addToCard('<%- pro.id %>' , '<%- pro.exsist %> ')"
                                                    class=" btn btn-primary btn-hover-secondary"
                                                    data-dismiss="modal">افزودن به سبد</button>

                                                <% } %>

                                                    <% } else { %>
                                                        <a href="/buyer/buyerLogin"><button aria-disabled="true"
                                                                class="btn btn-primary btn-hover-secondary">ابتدا باید
                                                                وارد شوید</button></a>
                                                        <% } %>
                                                            <% } else { %>
                                                                <button aria-disabled="true"
                                                                    class="btn btn-primary btn-hover-secondary">این
                                                                    محصول در حال حاظر موجود نیست</button>
                                                                <% } %>
                                                                    <button class="btn btn-wishlist btn-box"
                                                                        id="likeimg"><i
                                                                            class="fal fa-heart"></i></button>
                                                                    <!-- <button class="btn btn-compare btn-box"><i class="fal fa-random"></i></button> -->
                            </div>
                            <div class="product-meta">
                                <div class="meta-item">
                                    <h6>اندازه:</h6>
                                    <div class="meta-content">
                                        <span class="sku">
                                            <%- pro.size %>
                                        </span>
                                    </div>
                                </div>

                                <div class="meta-item">
                                    <h6> تعداد موجود:</h6>
                                    <% if(pro.exsist !=0) { %>
                                        <div class="meta-content">
                                            <a href="#" rel="tag">
                                                <%- pro.exsist %>
                                            </a>
                                        </div>
                                        <% } else { %>
                                            <div class="meta-content">
                                                <a href="#" style="color:red" rel="tag">موجود نمی باشد</a>
                                            </div>
                                            <% } %>
                                </div>
                                <div class="meta-item">
                                    <h6>میزان استفاده از ابریشم:</h6>
                                    <% if(pro.abrishamUsed=='TM' ){ %> <a href="#" rel="tag">خیلی زیاد </a>
                                        <% } %>
                                            <% if(pro.abrishamUsed=='M' ) { %> <a href="#" rel="tag">زیاد </a>
                                                <% } %>
                                                    <% if(pro.abrishamUsed=='N' ) { %> <a href="#" rel="tag">متوسط </a>
                                                        <% } %>
                                                            <% if(pro.abrishamUsed=='L' ) { %> <a href="#" rel="tag">
                                                                    کم</a>
                                                                <% } %>
                                                                    <% if(pro.abrishamUsed=='NU' ) { %> <a href="#"
                                                                            rel="tag"> استفاده نشده</a>
                                                                        <% } %>
                                                                            %>
                                                                            <div class="meta-content"></div>

                                </div>
                            </div>

                            <!-- <div class="entry-product-share">
                                <h6>اشتراک:</h6>
                                <div class="author-social-networks">
                                    <div class="inner">

                                        <a class="hint--bounce hint--top hint--primary" aria-label="فیس بوک" href="#"
                                            target="_blank">
                                            <i class="fab fa-facebook-f"></i>
                                        </a>

                                        <a class="hint--bounce hint--top hint--primary" aria-label="توییتر" href="#"
