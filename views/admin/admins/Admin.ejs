<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/bootstrapfour.min.css" rel="stylesheet">
    <link href="/css/bootstrapfour-rtl.min.css" rel="stylesheet">
    <title>مدیریت فروشندگان</title>
</head>

<body>
    <div class="d-flex justify-content-between align-items-center mb-3 border-bottom-1">
        <h2>مدیریت فروشندگان</h2>
        <div class="btn-group">
            <a href="/admin/admins/create" class="btn btn-sm btn-primary">ایجاد مدیر جدید</a>
            <a href="/admin/products" class="btn btn-sm btn-danger">بخش محصولات</a>
            <a href="/admin" class="btn btn-sm btn-warning">صفحه اصلی</a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>نام و نام خانوادگی</th>
                    <th>نام کاربری</th>
                    <th>شماره تماس</th>
                    <th>پسورد</th>
                    <th>تنظیمات</th>
                </tr>
            </thead>
            <% user.forEach(user=> { %>
            <tbody>
                <tr>
                    <td><a href="#"> <%- user.fullName %></a></td>
                    <td><%- user.userName %></td>
                    <td><%- user.phone %></td>
                    <td>
                        <%- user.password %>
                    </td>
                  
                    <td>
                        <form action="/admin/admins/remove/<%- user.id %>" method="post">
                            <div class="btn-group btn-group-sm">
                                <a href="/admin/admins/edit/<%- user.id %>" class="btn btn-primary">ویرایش</a>
                                <button type="submit" class="btn btn-danger">حذف</button>

                                
                               
                            </div>
                            
                        </form>
                       
                    </td>
                </tr>

            </tbody>
            <% }) %>
        </table>

    </div>


</body>

</html>