<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/bootstrapfour.min.css" rel="stylesheet">
    <link href="/css/bootstrapfour-rtl.min.css" rel="stylesheet">
    <title>مدیریت فروشندگان</title>
</head>

<body>
    <div class="d-flex justify-content-between align-items-center mb-3 border-bottom-1">
        <h2>مدیریت فروشندگان</h2>
        <div class="btn-group">
            <a href="/admin/users/create" class="btn btn-sm btn-primary">ایجاد فرشنده جدید</a>
            <a href="/admin/products" class="btn btn-sm btn-danger">بخش محصولات</a>
            <a href="/admin" class="btn btn-sm btn-warning">صفحه اصلی</a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>نام و نام خانوادگی</th>
                    <th>نام کاربری</th>
                    <th>شماره تماس</th>
                    <th>برند</th>
                    <th>تعداد محصولات</th>
                    <th>تنظیمات</th>
                </tr>
            </thead>
            <% user.forEach(user=> { %>
            <tbody>
                <tr>
                    <td><a href="#"> <%- user.fullName %></a></td>
                    <td><%- user.userName %></td>
                    <td><%- user.phone %></td>
                    <td>
                        <%- user.brand %>
                    </td>
                    <td>
                        <%- user.n_product %>
                    </td>
                    <td>
                        <form action="/admin/users/remove/<%- user.id %>" method="post">
                            <div class="btn-group btn-group-sm">
                                <a href="/admin/users/edit/<%- user.id %>" class="btn btn-primary">ویرایش</a>
                                <% if(admin.masterAdmin) { %>
                                <button type="submit" class="btn btn-danger">حذف</button>
                                <% if(!user.ban) { %>
                                <a href="/admin/users/ban/<%- user.id %>" class="btn btn-warning">تعلیق</a>
                                <% } else { %>
                                    <a href="/admin/users/setFree/<%- user.id %>" class="btn btn-success">آزاد سازی</a>
                                    <% } %>
                                <% } %>
                               
                            </div>
                            
                        </form>
                        <form action="/admin/users/baner/<%- user.id %>" method="post" enctype="multipart/form-data" >
                            <button type="submit" class="btn btn-primary">ارسال بنر</button>
                            <input type="file" name="baner" style="margin-right: 10px;">
                        </form>
                    </td>
                </tr>

            </tbody>
            <% }) %>
        </table>

    </div>


</body>

</html>